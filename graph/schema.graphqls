type Memo {
    id: ID!
    content: String!
    author: User!
}

type User {
    id: ID!
    name: String!
}

type Query {
    memos: [Memo!]!
    users: [User!]!
}

input NewMemo {
    content: String!
    userId: String!
}

type Mutation {
    createMemo(input: NewMemo!): Memo!
    deleteMemo(id: ID!): Memo!
    updateMemo(id: ID!, new: NewMemo!): Memo!
}

type Subscription {
    memoAdded(repoFullName: String!): Memo
}